<Window x:Class="AudioLearn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioLearn"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="urlOfSong" Margin="20" >Here will be path of your song</TextBlock>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button x:Name="VolumeMinBut" Padding="10" Click="VolumeMin">-</Button>
                <TextBlock x:Name="VolumeBox" Margin="10" >50</TextBlock>
                <Button x:Name="VolumePlusBut" Click="VolumePlus" Padding="10">+</Button>
            </StackPanel>
            
            <Button Click="Playbtn">Play</Button>
            <Button Click="Pausebtn" Margin="0,5">Pause</Button>
            <Button Click="Breakbtn">Break</Button>
            <Button Click="Openbtn" Margin="0,5">Open</Button>
            
        </StackPanel>
    </Grid>
</Window>
